
@{
    ViewBag.Title = "FormRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>FormRegister</h2>
@{
    Html.BeginForm("Capnhat", "FrmRegister_TMD", FormMethod.Get);
    <table class="table table-bordered">
        <tr>
            <td class="p-3 mb-2 bg-primary text-white text-center text-uppercase" colspan="2">
                Thông tin về đơn vị tuyến
            </td>
        </tr>
        <tr>
            <td>@Html.Label("Tên đơn vị tuyến (*)")</td>
            <td>@Html.TextBox("txtNameTMD")</td>
        </tr>
        <tr>
            <td>@Html.Label("Loại hình doanh nghiệp (*)")</td>
            <td>
                @Html.DropDownList("Loaihinhdoanhnghiep", ViewBag.ListLoaihinhdoanhnghiep as SelectList, "-- Chọn Loại Hình --", new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>@Html.Label("Số lượng nhân viên")</td>
            <td>@Html.TextBox("numberNV", null, new { type = "number" })</td>
        </tr>
        <tr>
            <td class="p-3 mb-2 bg-primary text-white text-center text-uppercase" colspan="2">
                Thông tin liên hệ
            </td>
        </tr>
        <tr>
            <td>@Html.Label("Địa chỉ (*)")</td>
            <td>@Html.TextArea("txtAddress")</td>
        </tr>
        <tr>
            <td>@Html.Label("Người liên hệ (*)")</td>
            <td>@Html.TextBox("txtnguoilienhe")</td>
        </tr>
        <tr>
            <td>@Html.Label("Số điện thoại (*)")</td>
            <td>@Html.TextBox("numberPhone", null, new { type = "number" })</td>
        </tr>
        <tr>
            <td>@Html.Label("Số Fax")</td>
            <td>@Html.TextBox("numberFax", null, new { type = "number" })</td>
        </tr>
        <tr>
            <td>@Html.Label("Email")</td>
            <td>@Html.TextBox("txtEmail")</td>
        </tr>
        <tr>
            <td>@Html.Label("Địa chỉ Website")</td>
            <td>@Html.TextBox("txtWebsite")</td>
        </tr>
        <tr>
            <td class="p-3 mb-2 bg-primary text-white text-center text-uppercase" colspan="2">
                Thông tin đăng nhập
            </td>
        </tr>
        <tr>
            <td>@Html.Label("Tên đăng nhập (*)")</td>
            <td>@Html.TextBox("txtUName")</td>
        </tr>
        <tr>
            <td>@Html.Label("Mật khẩu (*)")</td>
            <td>@Html.Password("txtPass")</td>
        </tr>
        <tr>
            <td>@Html.Label("Nhập lại mật khẩu (*)")</td>
            <td>@Html.Password("txCfPass")</td>
        </tr>
        <tr>
            <td class="p-3 mb-2 bg-primary text-white text-center text-uppercase" colspan="2">
                Nhận Email
            </td>
        </tr>
        <tr>
            <td>@Html.Label("Nhận thư điện tử")</td>
            <td>
                @Html.RadioButton("YesNo", "Yes", true) Nhận
                @Html.RadioButton("YesNo", "No") Không nhận
            </td>
        </tr>
        <tr>
            <td>
                <input class="btn btn-success" type="submit" value="Cập nhật" />
                <input class="btn btn-secondary" type="reset" value="Hủy bỏ" />
            </td>
        </tr>
    </table>
    Html.EndForm();
}
