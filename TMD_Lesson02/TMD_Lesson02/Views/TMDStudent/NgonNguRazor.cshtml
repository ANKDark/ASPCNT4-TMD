@{
    ViewBag.Title = "Ngôn ngữ Razor";
}

<h2>Ngôn ngữ Razor</h2>
<hr />
<h3>Biến</h3>
@{
    var name = "Trần Minh Đức";
    int age = 19;
    DateTime dt = DateTime.Now;
}

<p>Tên: @name</p>
<p>Tuổi: @age</p>
<p>Ngày hiện tại: @dt</p>
<hr />
<h3>Câu lệnh điều kiện (IF)</h3>
@{
    if (age > 18)
    {
        <p>Đã đủ 18 tuổi</p>
    }
    else
    {
        <p>Chưa đủ 18 tuổi</p>
    }
}
<hr />
<h3>Loop: for, while, do... while, foreach....</h3>
@{
    int num = 10;
}
<ul>
    @for (int i = 0; i < num; i++)
    {
        <li>@i</li>
    }
</ul>
<hr />
<h3>Mảng</h3>
@{
    string[] names = { "Trần Minh Đức", "Hoàng Kim Oanh", "Trần ...", "Đức đẹp trai" };
}
@foreach (var item in names)
{
    <p>@item</p>
}
